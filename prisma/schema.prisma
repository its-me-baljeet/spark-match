generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  clerkId    String   @unique   // Clerk User ID
  name       String
  age        Int
  bio        String?
  gender     String
  interests  String[]
  createdAt  DateTime @default(now())
}
